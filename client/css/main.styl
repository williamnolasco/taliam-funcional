                                    top 0
                                    -webkit-animation desplazando_lista 4s linear infinite alternate
                                    animation desplazando_lista 4s linear infinite alternate
                                @-webkit-keyframes desplazando_lista
                                    0%, 20%
                                        top 0
                                    39%, 59%
                                        top -60px
                                    79%, 100%
                                        top -120px
                                @keyframes desplazando_lista
                                    0%, 20%
                                        top 0
                                    39%, 59%
                                        top -60px
                                    79%, 100%
                                        top -120px
                                
                        p 
                            font-size 1.4rem
                            color blanco
                            text-align center
                            &:nth-of-type(2)
                                display none
