style_double_stripe(background-color)
    &:before, &:after
        content ''
        height 3px 
        background-color background-color
        border-radius 1rem
        position absolute
        left 50%
        -webkit-transform translateX(-50%)
        transform translateX(-50%)
    &:before 
        width 70px
        top -25px
    &:after
        width 35px
        top -35px
estilos_texto(color)
    color color 
    font-size 1.4rem
styles_span(color)
    display block
    font-size 1.4rem
    color color 
    font-family 'Poppins-Regular'
    font-weight bolder
styles_btn_background_white()
    color verde-taliam
    border 2px solid verde-taliam
        &:hover 
            background-color morado-taliam
            color blanco
feature_icon()
    display block
    margin-right 15%
    position absolute
    right 0
    top 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)

*
	margin 0
	padding 0
	box-sizing border-box
html
    font-size 14px
    line-height normal
body 
    font-family 'Poppins-Light'
.icon-subject, .icon-keyboard_arrow_down-o
    color blanco
    cursor pointer
.icon-subject
    font-size 3rem
.brand-logo
    line-height 40px
    font-family 'Poppins-Regular'
    font-size 2.3rem !important
    font-weight bolder
    z-index 2
.btn 
    width 230px
    height 45px
    font-size 1.3rem
    font-family 'Poppins-Regular'
    background-color transparent
    //text-transform none
    border 2px solid blanco
    border-radius 2rem
    display flex
    flex-flow row nowrap
    justify-content center
    align-items center
    letter-spacing 0
    box-shadow none
    -webkit-transition all 0.9s ease
    transition all 0.9s ease
    &:hover
        background-color transparent
        box-shadow none
        margin-bottom 30px
        -webkit-transform scale(1.1)
        transform scale(1.1)
.icon-keyboard_arrow_down-o
    font-size 4.2rem
    position absolute
    left 50%
    bottom -20px
    -webkit-transform translateX(-50%)
    transform translateX(-50%)
    -webkit-animation mover_hacia_abajo 0.7s linear infinite alternate
    animation mover_hacia_abajo 0.7s linear infinite alternate
@-webkit-keyframes mover_hacia_abajo
    0%
        bottom -20px
    100%
        bottom 10px
@keyframes mover_hacia_abajo
    0%
        bottom -20px
    100%
        bottom 10px
